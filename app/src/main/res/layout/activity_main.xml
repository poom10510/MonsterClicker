<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kitipoom.clickinggame.MainActivity">


    <TextView
        android:id="@+id/moneytab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/heal"
        android:layout_alignEnd="@+id/heal" />
    <Button
        android:id="@+id/attk"
        android:text="Click!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/heal"
        android:text="Heal!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attk"
        android:layout_alignLeft="@+id/attk"
        android:layout_alignStart="@+id/attk" />
    <Button
        android:id="@+id/auto"
        android:text="Auto"
        android:layout_below="@+id/moneytab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Hp !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/enermyhp"
        android:layout_alignTop="@+id/levelupP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hp!"
        android:id="@+id/playerhp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Enermyimage"
        android:src="@drawable/enermypic"

        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/attk"
        android:layout_toStartOf="@+id/attk" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up level"
        android:id="@+id/levelupP"
        android:layout_below="@+id/auto"
        android:layout_alignLeft="@+id/attk"
        android:layout_alignStart="@+id/attk" />


</RelativeLayout>
